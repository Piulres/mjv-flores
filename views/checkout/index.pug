extends ../layout

block content
  form(method="post")
    fieldset
      legend Forma de Pagamento

      p
        strong
          | Preço Total: $ #{order.selection.price}

      p
        label(for="creditcard") Número do Cartão de Crédito:
          input(type="text", name="creditcard", placeholder="Qualquer número")
      p
        label(for="fullname") Nome Completo:
          input(type="text", name="fullname", placeholder="Nome completo")

      div
        input(type="hidden", name="orderId", value=order.id)
        input(type="hidden", name="address", value=address)

      p.buttons
        input(type="submit", value="Comprar!")